<%= turbo_frame_tag @user, target: '_top' do %>
  <%= form_with(model: @user) do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="container">
      <%= form.label :phone_number, style: "display: block" %>
      <%= form.text_field :phone_number %>
    </div>
    <div class="center-recaptcha" data-controller="recaptcha-v2" data-recaptcha-v2-site-key-value="<%= ENV['RECAPTCHA_SITE_KEY'] %>" >
      <div id='recaptchaV2'></div>
    </div>
    <div class="container">
      <%= form.submit %>
    </div>
  <% end %>
<% end %>